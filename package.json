{
  "name": "my-test-app",
  "version": "1.0.0",
  "description": "A basic Node.js app for pkg",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ini": "^4.1.2",
    "pdf-lib": "^1.17.1",
    "pdf-to-img": "^2.1.2",
    "pdf2image": "^1.2.3",
    "punycode": "^2.3.1",
    "sharp": "^0.33.3",
    "tesseract.js": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "pdf-splitter.com",
    "productName": "PDF Splitter",
    "asar": true,
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "dist/**/*",
      "views/**/*",
      "app.js",
      "package.json"
    ]
  }
}
